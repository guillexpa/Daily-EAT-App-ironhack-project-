
<table class="table table-striped table-hover ingredient-table ">
  <tr>
    <th>Ingredient</th>
    <th>Type</th>
    <th>Description</th>
    <th>Gluten Free</th>
    <th>Lactose Free</th>
  </tr>

  <% @ingredient_list.each do |ingredient| %>
    <tr>
      <td><%= link_to "#{ingredient.name}", ingredient , method: 'GET'%></td>
      <td><%= ingredient.ing_type %></td>
      <td><%= ingredient.description %></td>

      <% if ingredient.gluten%>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
      <%else%>
        <td><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
      <%end%>

      <% if ingredient.lactose%>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
      <%else%>
        <td><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
      <%end%>
    </tr>
  <%end%>
</table>
<%= link_to "Add Ingredient", new_ingredient_path %>
