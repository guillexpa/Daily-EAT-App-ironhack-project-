<%= form_for [@meal] do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class=> "form-control", placeholder: :name %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :calories%>
    <%= f.text_field :calories, :class=> "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :meal_type %>
    <%= f.select :meal_type, options_for_select(["Starter", "Main"]), :class=> "form-control"  %>
  </div>




  <%= f.submit "Create" %>
    <%= link_to "Cancel", :back %>
<% end %>
