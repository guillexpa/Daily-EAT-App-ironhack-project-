<table style="width:50%">
  <tr>
    <th>Meal</th>
    <th>Price</th>
    <th>Description</th>
    <th>Calories</th>
  </tr>

  <% @meal_list.each do |meal| %>
    <tr>
      <td><%= link_to "#{meal.name}", meal , method: 'GET'%></td>
      <td><%= meal.price %></td>
      <td><%= meal.description %></td>
      <td><%= meal.calories %></td>
      <td><%= link_to "Add", add_meals_menu_path(@menu, meal), method: 'POST' %></td>
    </tr>
  <%end%>
</table>
