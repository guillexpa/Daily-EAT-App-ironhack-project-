<table class="table table-striped table-hover" style="width:80%">
  <h4>Added ingrediens</h4>
  <% if @meal_ingredient_list.any?  %>
      <tr>
        <th>Ingredient</th>
        <th></th>
      </tr>
    <% @meal_ingredient_list.each do |ingredient| %>
      <tr>
        <td><%= link_to "#{ingredient.name}", ingredient , method: 'GET'%></td>
        <td><%= link_to "Remove", meal_ingredient_path(@meal, ingredient), method: 'DELETE'%></td>
      </tr>
    <%end%>
  <% else %>
    <p>No ingredients yet!</p>
  <%end%>
</table>
